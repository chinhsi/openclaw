{
  "build": {
    "node_version": "22",
    "build_command": "npm install --omit=dev",
    "output_dir": "."
  },
  "run": {
    "start_command": "npm start"
  },
  "env": {
    "PORT": {
      "default": "3000"
    },
    "NODE_ENV": {
      "default": "production"
    },
    "OPENCLAW_CONFIG_PATH": {
      "default": "/app/openclaw.json"
    }
  },
  "ports": [
    {
      "port": 3000,
      "protocol": "HTTP"
    }
  ],
  "deploy": {
    "auto_deploy": true,
    "branch": "main"
  }
}